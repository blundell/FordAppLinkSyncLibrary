<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ford.syncV4.demosimple"
  android:versionCode="1"
  android:versionName="1.0.0">

  <uses-sdk
    android:minSdkVersion="8"
    android:targetSdkVersion="15" />

  <uses-permission android:name="android.permission.BLUETOOTH" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

  <application
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".MainActivity"
      android:label="@string/title_activity_main_1">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".AlternativeMainActivity"
      android:label="@string/title_activity_main_2">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_lockscreen"
      android:configChanges="orientation|keyboard|keyboardHidden|layoutDirection|screenLayout"
      android:name=".LockScreenActivity" />

  </application>


</manifest>
